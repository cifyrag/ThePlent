@model IEnumerable<ThePlant.EF.Models.Plant>


@{
    ViewData["Title"] = "Home Page";
}

@if (!Model.Any())
{
    <div class="alert alert-warning text-center mt-4">
        Растения не найдены.
    </div>
}
else
{
    <partial name="_FilterForm" />
    <div class="row">
        @foreach (var plant in Model)
        {
            <partial name="_PlantCard" model="plant" />
        }
    </div>
}
